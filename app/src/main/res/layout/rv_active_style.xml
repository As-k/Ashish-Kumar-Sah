<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cdv"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        app:cardElevation="5dp">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll1"
                android:layout_margin="5dp"
                >
                <TextView
                    android:id="@+id/tv_vendor"
                    style="@style/text_view_style"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="Dummy"
                    android:textColor="#000"
                    android:drawableLeft="@drawable/ic_assignment"
                    android:drawablePadding="2dp"/>

                <TextView
                    android:id="@+id/tv_amount"
                    style="@style/text_view_style"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:drawableLeft="@drawable/rupee_indian"
                    android:drawablePadding="2dp"
                    android:text="1000/-"
                    android:textColor="#123"
                    />


            </RelativeLayout>

            <TextView
                style="@style/text_view_style"
                android:id="@+id/tv_date"
                android:text="01-March-2018"
                android:textColor="#5c6166"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/ic_date_16dp"
                android:drawablePadding="2dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>

